<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".FoodDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:srcCompat="@drawable/back_image" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="상품 정보"
                    android:layout_marginLeft="110dp"
                    android:fontFamily="@font/maplestorybold"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="3dp"
                android:background="#f2f1e6"/>

            <ImageView
                android:id="@+id/iv_d_profile"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_launcher_background"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_food_details"
                android:elevation="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Et_d_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/maplestorybold"
                    android:text="강아지 사료 이름"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Et_d_sales_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="173dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/maplestorylight"
                    android:text="(판매량)"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <LinearLayout
                    android:id="@+id/food_score_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_start1"
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/iv_start2"
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/iv_start3"
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/iv_start4"
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/iv_start5"
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:id="@+id/Et_d_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/maplestorybold"
                        android:hint="5"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="20dp"
                    android:background="#f2f1e6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="75dp"
                        android:fontFamily="@font/maplestorybold"
                        android:text="AAFCO"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_corner_satis"
                        android:fontFamily="@font/maplestorylight"
                        android:text="충족"
                        android:textColor="#008000" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:fontFamily="@font/maplestorybold"
                        android:text="FDA인증"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_corner_satis"
                        android:fontFamily="@font/maplestorylight"
                        android:text="충족"
                        android:textColor="#008000" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#f2f1e6" />

                <LinearLayout
                    android:id="@+id/dog_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/dog_price_layout"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/maplestorybold"
                            android:text="가격"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/Et_d_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/maplestorylight"
                            android:text="(100g당)1995원"
                            android:textColor="@color/black" />
                    </LinearLayout>


                    <View
                        android:layout_width="3dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="2dp"
                        android:background="#f2f1e6" />

                    <LinearLayout
                        android:id="@+id/dog_manu_layout"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/maplestorybold"
                            android:text="제조사"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/Et_d_manu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/maplestorylight"
                            android:text="(주)미소"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="4dp"
                        android:background="#f2f1e6" />
                    <LinearLayout
                        android:id="@+id/dog_kcal_layout"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/maplestorybold"
                            android:text="칼로리"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/Et_d_kcal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/maplestorylight"
                            android:text="(250g)1143.75Kcal"
                            android:textColor="@color/black" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#f2f1e6" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/maplestorybold"
                        android:layout_marginLeft="160dp"
                        android:text="알러지 요인"
                        android:textSize="18dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="115dp"
                        android:fontFamily="@font/maplestorylight"
                        android:text="해바라기씨,호박씨,게껍질,양고기"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#f2f1e6" />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maplestorybold"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="160dp"
                    android:text="알러지 요인"
                    android:textSize="18dp"/>

                <LinearLayout
                    android:id="@+id/nutrient_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/maplestorylight"
                            android:text="조단백질 23%"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/maplestorylight"
                            android:text="조지방 8%"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/maplestorylight"
                            android:text="칼슘 0.8%"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/maplestorylight"
                            android:text="조단백질 23%"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/maplestorylight"
                            android:text="조지방 8%"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/maplestorylight"
                            android:text="칼슘 0.8%"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/maplestorylight"
                            android:text="조단백질 23%"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/maplestorylight"
                            android:text="조지방 8%"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/maplestorylight"
                            android:text="칼슘 0.8%"/>

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
</ScrollView>
