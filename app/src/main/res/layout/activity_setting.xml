<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Setting">

  <ImageView
      android:id="@+id/doggy_dine"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_marginStart="-2dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/doggy_dine" />

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/circle_profile"
      android:layout_width="194dp"
      android:layout_height="207dp"
      android:layout_gravity="center"
      android:background="@android:color/transparent"
      android:src="@drawable/ic_launcher_background"
      app:civ_border_color="#90721AFF"
      app:civ_border_overlay="true"
      app:civ_border_width="5dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/doggy_dine" />

  <LinearLayout
      android:layout_width="414dp"
      android:layout_height="353dp"
      android:orientation="vertical"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/circle_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/textView2"
          android:layout_width="10dp"
          android:layout_height="35dp"
          android:fontFamily="@font/maplestorybold"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="30dp"
          android:layout_weight="1"
          android:textColor="@color/black"
          android:text="이름 : "
          android:textSize="20dp" />

      <EditText
          android:id="@+id/Et_setting_name"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:layout_weight="1"
          android:textColor="@color/black"
          android:ems="10"
          android:fontFamily="@font/maplestorylight"
          android:hint="강아지이름"
          android:inputType="text"
          android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/textView3"
          android:layout_width="10dp"
          android:layout_height="35dp"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="30dp"
          android:fontFamily="@font/maplestorybold"
          android:layout_weight="1"
          android:text="나이 : "
          android:textColor="@color/black"
          android:textSize="20dp" />

      <EditText
          android:id="@+id/Et_setting_age"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:layout_weight="1"
          android:textColor="@color/black"
          android:ems="10"
          android:fontFamily="@font/maplestorylight"
          android:hint="강아지 나이"
          android:inputType="text"
          android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/textView4"
          android:layout_width="10dp"
          android:layout_height="35dp"
          android:layout_marginLeft="10dp"
          android:fontFamily="@font/maplestorybold"
          android:layout_marginBottom="30dp"
          android:layout_weight="1"
          android:textColor="@color/black"
          android:text="체중 : "
          android:textSize="20dp" />

      <EditText
          android:id="@+id/Et_setting_weight"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:layout_weight="1"
          android:textColor="@color/black"
          android:ems="10"
          android:fontFamily="@font/maplestorylight"
          android:hint="강아지 체중(kg)"
          android:inputType="text"
          android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/textView5"
          android:layout_width="10dp"
          android:layout_height="35dp"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="30dp"
          android:fontFamily="@font/maplestorybold"
          android:layout_weight="1"
          android:text="활동수치 : "
          android:textColor="@color/black"
          android:textSize="20dp" />

      <EditText
          android:id="@+id/Et_setting_ar"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:layout_weight="1"
          android:textColor="@color/black"
          android:ems="10"
          android:fontFamily="@font/maplestorylight"
          android:hint="강아지 활동수치"
          android:inputType="text"
          android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/textView6"
          android:layout_width="10dp"
          android:layout_height="35dp"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="30dp"
          android:fontFamily="@font/maplestorybold"
          android:layout_weight="1"
          android:textColor="@color/black"
          android:text="알러지 : "
          android:textSize="20dp" />

      <EditText
          android:id="@+id/Et_setting_allergy"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:layout_weight="1"
          android:ems="10"
          android:hint="강아지 알러지"
          android:fontFamily="@font/maplestorylight"
          android:inputType="text"
          android:text=""
          android:textColor="@color/black" />
    </LinearLayout>
  </LinearLayout>

  <TextView
      android:id="@+id/Tv_setting_go"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_marginBottom="40dp"
      android:fontFamily="@font/maplestorylight"
      android:text="수정"
      android:textColor="#90721AFF"
      android:textSize="25dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.956"
      app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>