<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setting_btn"
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:layout_marginLeft="340dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:contentDescription="환경설정버튼"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#90721AFF"
            app:civ_border_overlay="true"
            app:civ_border_width="5dp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_layout"
        android:layout_above="@id/bottom_layout"
        android:layout_marginBottom="1dp"
        >

        <ImageView
            android:id="@+id/doggy_dine"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/doggy_dine_removebg" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/bottom_layout"
        android:layout_above="@id/btn_detecting"
        >
        <ImageButton
            android:id="@+id/calender_btn"
            android:contentDescription="캘린더버튼"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/calendar" />
        <ImageButton
            android:id="@+id/feed_btn"
            android:contentDescription="사료등록버튼"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/feed_btn" />
        <ImageButton
            android:id="@+id/chatbot_btn"
            android:contentDescription="gpt버튼"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/gpt" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_detecting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="밥 주기"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>