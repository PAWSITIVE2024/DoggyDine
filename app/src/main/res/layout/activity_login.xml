<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".login"
    android:orientation="vertical" >



    <ImageView
        android:id="@+id/doggy_dine"
        android:layout_width="338dp"
        android:layout_height="94dp"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/doggy_dine_removebg"/>

    <LinearLayout
        android:id="@+id/Id_layout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/doggy_dine">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginRight="9dp"
            android:fontFamily="@font/maplestorybold"
            android:text="ID : "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="#90000000"
            android:hint="아이디"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/passward_layer"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Id_layout">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/maplestorybold"
            android:textColor="@color/black"
            android:text="PW : "
            android:textSize="20dp" />
        <EditText
            android:id="@+id/editTextNumberPassword"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#90000000" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_layer"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_below="@id/passward_layer">
        <Button
            android:id="@+id/go_to_login_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/maplestorylight"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:text="로그인" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />
        <Button
            android:id="@+id/go_to_register_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/maplestorylight"
            android:text="회원가입" />
    </LinearLayout>
</RelativeLayout>