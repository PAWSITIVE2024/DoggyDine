<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@drawable/rounder_coner_doginfo"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".PickNumber">
    <ImageView
        android:id="@+id/doggy_dine"
        android:layout_width="200dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/doggy_dine" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="하루에 몇 회, 언제 급여하나요?"
        android:gravity="center"
        android:textSize="25dp"
        android:fontFamily="@font/maplestorybold"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="130dp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_button_recycler"
        android:layout_gravity="center_vertical">
        <RadioGroup
            android:id="@+id/pick_num_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/once_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="1 회"
                android:layout_marginBottom="5dp"/>
            <RadioButton
                android:id="@+id/twice_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="2 회"
                android:layout_marginBottom="5dp"/>
            <RadioButton
                android:id="@+id/triple_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="3 회"
                android:layout_marginBottom="5dp"/>
            <RadioButton
                android:id="@+id/four_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="4 회"
                android:layout_marginBottom="5dp"/>
            <RadioButton
                android:id="@+id/five_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="5 회"/>
        </RadioGroup>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/time_picker_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/save_number_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="확인"
        android:layout_gravity="right"/>
</LinearLayout>