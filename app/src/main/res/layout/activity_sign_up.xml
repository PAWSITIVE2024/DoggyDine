<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".sign_up">

    <ImageView
        android:id="@+id/doggy_dine"
        android:layout_width="193dp"
        android:layout_height="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/doggy_dine" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="196dp"
        android:layout_height="184dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#90721AFF"
        app:civ_border_overlay="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doggy_dine"
        app:srcCompat="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/Et_s_allergy"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:fontFamily="@font/maplestorylight"
        android:hint="알러지"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#90000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Et_s_ar" />

    <EditText
        android:id="@+id/Et_s_weight"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:fontFamily="@font/maplestorylight"
        android:hint="반려견 체중(kg)"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#90000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Et_s_age" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="70dp"
        android:textColor="@color/black"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/maplestorybold"
        android:text="Name : "
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/Et_s_name"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="42dp"
        android:textColor="@color/black"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/maplestorybold"
        android:text="AR : "
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/Et_s_ar"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/Tv_setting_go"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/maplestorybold"
        android:text="Allergy : "
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/Et_s_allergy"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/Et_s_name"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:fontFamily="@font/maplestorylight"
        android:hint="반려견 이름"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#90000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Et_s_pw" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:fontFamily="@font/maplestorybold"
        android:text="ID : "
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/Et_s_id"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Et_s_id" />

    <EditText
        android:id="@+id/Et_s_age"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:fontFamily="@font/maplestorylight"
        android:hint="반려견 나이"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#90000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Et_s_name" />

    <EditText
        android:id="@+id/Et_s_pw"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:fontFamily="@font/maplestorylight"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#90000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Et_s_id" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="62dp"
        android:textColor="@color/black"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/maplestorybold"
        android:text="Age : "
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/Et_s_age"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:textColor="@color/black"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/maplestorybold"
        android:text="PW : "
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/Et_s_pw"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/Et_s_id"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="68dp"
        android:ems="10"
        android:fontFamily="@font/maplestorylight"
        android:hint="아이디"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="#90000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="79dp"
        android:textColor="@color/black"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/maplestorybold"
        android:text="Weight : "
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/Et_s_weight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/Et_s_ar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:fontFamily="@font/maplestorylight"
        android:hint="활동수치"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#90000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Et_s_weight" />

    <Button
        android:id="@+id/Btn_s_register"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="@+id/Tv_s_go"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/Tv_s_go"
        app:layout_constraintTop_toBottomOf="@+id/Tv_s_go" />

    <TextView
        android:id="@+id/Tv_s_go"
        android:layout_width="136dp"
        android:layout_height="18dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/maplestorybold"
        android:text="활동수치보러가기"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Et_s_allergy"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="@+id/Et_s_allergy"
        app:layout_constraintTop_toBottomOf="@+id/Et_s_allergy" />

</androidx.constraintlayout.widget.ConstraintLayout>